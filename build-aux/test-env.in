# Usage: ./test-env COMMAND ARG...
#
# Run tests within the pre-inst-env.

# Make sure 'cd' behaves deterministically and doesn't write anything to
# stdout.
unset CDPATH

case "$1" in
    --quiet-stderr)
	# Silence stderr output
	exec 2> /dev/null
	shift
	;;
esac

# Avoid issues that could stem from l10n, such as language/encoding
# mismatches.
unset LANGUAGE
LC_MESSAGES=C
export LC_MESSAGES

# Ignore user settings that might interfere with tests.
unset GUIX_PACKAGE_PATH

"@abs_top_builddir@/pre-inst-env" "$@"
exit $?
